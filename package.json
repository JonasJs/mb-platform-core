{
  "name": "mb-platform-core",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:auth-front dev:auth-service",
    "dev:auth-front": "npm run dev --workspace=apps/auth-front",
    "dev:auth-service": "npm run dev --workspace=services/auth-service",
    "build": "npm run build --workspaces --if-present",
    "lint": "npm-run-all --parallel lint:root lint:workspaces",
    "lint:root": "eslint . --ext .js,.jsx,.mjs,.vue --fix --ignore-pattern 'apps/**' --ignore-pattern 'services/**' --ignore-pattern 'packages/**'",
    "lint:workspaces": "npm run lint --workspaces --if-present",
    "format": "npm-run-all --parallel format:root format:workspaces",
    "format:root": "prettier --write --ignore-path .gitignore .",
    "format:workspaces": "npm run format --workspaces --if-present",
    "lint:staged": "lint-staged",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,mjs,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,json,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "npx commitlint --edit $1"
    }
  },
  "dependencies": {
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "eslint": "^9.28.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3"
  }
}
