{
  "name": "mb-platform-core",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:auth-front dev:auth-service",
    "dev:auth-front": "npm run dev --workspace=apps/auth-front",
    "dev:auth-service": "npm run dev --workspace=services/auth-service",
    "build": "npm run build --workspaces --if-present",
    "prepare": "husky install",
    "lint": "npm run eslint:format --workspaces --if-present",
    "format": "npm run prettier:format --workspaces --if-present",
    "eslint:format": "npm run eslint:format --workspaces --if-present",
    "prettier:format": "npm run prettier:format --workspaces --if-present"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "prettier --write",
      "npm run eslint:format --workspaces --if-present -- --cache --fix"
    ],
    "*.@(css|scss|json|md)": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged && npm run lint",
      "commit-msg": "npx commitlint --edit $1"
    }
  },
  "dependencies": {
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "eslint": "^9.28.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3"
  }
}
